<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:id="@+id/lo_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Image"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_error_24" />

        <TextView
            android:id="@+id/tv_lot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_avatar"
            android:layout_alignBottom="@id/iv_avatar"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="125A"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lo_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo_avatar"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_workshop_assay_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textAppearance="?textAppearanceListItem"
            tools:text="Picq" />

        <TextView
            android:id="@+id/tv_country_assay_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_workshop_assay_mark"
            android:layout_marginStart="10dp"
            android:textAppearance="?textAppearanceListItem"
            tools:text="French Assay Mark" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lo_serial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo_marks"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/serial"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/txt_serial"
            android:text="A23"
            android:textAppearance="?textAppearanceListItem" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lo_serial"
        android:layout_alignStart="@id/lo_marks"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/gemstones_ans_cuts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jewel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Collar"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/of"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_gemstones_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Diamante"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/designedby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/designed_by"
            android:layout_below="@id/gemstones_ans_cuts"
            android:layout_marginStart="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_designer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/designedby"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/designedby"
            android:text="Cartier"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/epoque"
            android:layout_below="@id/designedby"
            android:layout_marginStart="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textView14"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView14"
            android:text="RestauraciÃ³n"
            android:textColor="#000000"
            android:textSize="16sp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/owned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/features"
        android:layout_marginTop="10dp"
        android:textSize="16sp" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="@string/owned_to" />

        <TextView
            android:id="@+id/tv_owners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView10"
            android:text="Pedrito"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lo_obs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/owned"
        android:layout_marginTop="10dp"
        android:textSize="16sp" >

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="@string/obs" />

        <TextView
            android:id="@+id/tv_obs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView17"
            android:layout_marginStart="10dp"
            android:text="@string/lorem"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RelativeLayout>
</RelativeLayout>