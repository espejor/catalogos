<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".periods_package.add_edit_period.AddEditPeriodActivity">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Body1"
        app:counterTextAppearance="@style/TextAppearance.AppCompat.Body1"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/period"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_init"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Body1"
            app:counterTextAppearance="@style/TextAppearance.AppCompat.Body1"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/init_year"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            app:counterOverflowTextAppearance="@style/TextAppearance.AppCompat.Body1"
            app:counterTextAppearance="@style/TextAppearance.AppCompat.Body1"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Body1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_final"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/final_year"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


</LinearLayout>
